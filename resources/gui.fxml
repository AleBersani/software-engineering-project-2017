<?import javafx.scene.layout.GridPane?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.RadioButton?>
<GridPane fx:controller="it.polimi.ingsw.client.Controller"
          stylesheets="/gui.css"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding>
        <Insets bottom="10"/>
    </padding>

    <Label text="Username:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Label text="Choose the connection:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>

    <TextField fx:id="usernameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <HBox alignment="BASELINE_RIGHT" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <Button text="Sign In" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <Button text="Log In" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    </HBox>

    <Button text="Connect" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <fx:define>
        <ToggleGroup fx:id="connectionToggleGroup"/>
    </fx:define>
    <RadioButton GridPane.rowIndex="3" GridPane.columnIndex="1" text="RMI" toggleGroup="$connectionToggleGroup"/>
    <RadioButton GridPane.rowIndex="4" GridPane.columnIndex="1" text="Socket" toggleGroup="$connectionToggleGroup"/>

</GridPane>